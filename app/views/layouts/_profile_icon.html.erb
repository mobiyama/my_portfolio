<% if profile.avatar.attached? %>
  <%= image_tag(profile.avatar.variant(combine_options:{resize:"30x30^",crop:"30x30+0+0",gravity: :center}).processed, style: "border-radius: 4em;margin-bottom: 1px;") %>
<% else %>
  <%= image_tag("default.jpg", size: '30x30' , style: "border-radius: 4em;margin-bottom: 1px;") %>
<% end %>
